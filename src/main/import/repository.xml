<?xml version="1.0" encoding="UTF-8"?>
<content xmlns:j="http://www.jahia.org/jahia/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0">
    <modules jcr:primaryType="jnt:modules">
        <store-template j:dependencies="bootstrap3-components bootstrap3-core contact default event facets jquery privateappstore search teasers"
                      j:installedModules="store-template"
                      j:modulePriority="0"
                      j:moduleType="templatesSet"
                      j:title="Jahia Store Template"
                      jcr:primaryType="jnt:module">
                
                <portlets jcr:primaryType="jnt:portletFolder"/>
                <files jcr:primaryType="jnt:folder">
                    <bootstrap jcr:primaryType="jnt:folder">
                        <css jcr:primaryType="jnt:folder">
                            <bootstrap.css jcr:primaryType="jnt:file">
                                <jcr:content jcr:mimeType="text/css" jcr:primaryType="jnt:resource"/>
                            </bootstrap.css>
                        </css>
                    </bootstrap>
                </files>
                <contents jcr:primaryType="jnt:contentFolder"/>
                <templates jcr:primaryType="jnt:templatesFolder">
                    <files jcr:primaryType="jnt:folder">
                        <themes jcr:primaryType="jnt:folder">
                            <default jcr:primaryType="jnt:folder"/>
                        </themes>
                    </files>
                    <contents jcr:primaryType="jnt:contentFolder"/>
                    <base j:view="store"
                  jcr:mixinTypes="jmix:theme"
                  jcr:primaryType="jnt:template">
                        <home-base jcr:primaryType="jnt:pageTemplate">
                            <modules jcr:primaryType="jnt:contentList"/>
                            <pageContent jcr:primaryType="jnt:contentList">
                                <homeHeader jcr:primaryType="jnt:area">
                                    <homeHeader j:view="header"
                                    jcr:mixinTypes="jmix:renderable"
                                    jcr:primaryType="jnt:contentList">
                                        <header-menu fluid="false"
                                        inverse="false"
                                        j:classname="header clearfix"
                                        j:skin="skins.custom"
                                        j:view="store"
                                        jcr:mixinTypes="jmix:customSkin jmix:renderable jmix:skinnable"
                                        jcr:primaryType="bootstrap3nt:enhancedNavBar">
                                            <j:translation_fr jcr:language="fr"
                                                jcr:mixinTypes="mix:title"
                                                jcr:primaryType="jnt:translation"
                                                jcr:title="header-menu"/>
                                            <login j:view="storev2"
                                     jcr:mixinTypes="jmix:renderable"
                                     jcr:primaryType="bootstrap3nt:navBarItemLoginForm"
                                     position="right"
                                     view="menu"/>
                                        </header-menu>
                                        <header-container fluid="false" jcr:primaryType="bootstrap3nt:container">
                                            <header-container jcr:primaryType="jnt:contentList">
                                                <storetitle jcr:primaryType="jnt:storeTitle">
                                                    <j:translation_fr butonlabel="TAKE A TOUR!"
                                                      jcr:language="fr"
                                                      jcr:primaryType="jnt:translation"
                                                      title="Welcome to the  Jahia Public App Store"/>
                                                </storetitle>
                                            </header-container>
                                        </header-container>
                                    </homeHeader>
                                </homeHeader>
                                <search-bar fluid="false"
                                 inverse="false"
                                 j:view="storeSearch"
                                 jcr:mixinTypes="jmix:renderable"
                                 jcr:primaryType="bootstrap3nt:enhancedNavBar">
                                    <j:translation_fr jcr:language="fr"
                                          jcr:mixinTypes="mix:title"
                                          jcr:primaryType="jnt:translation"
                                          jcr:title="Search bar"/>
                                    <search-form j:view="store"
                                     jcr:mixinTypes="jmix:renderable"
                                     jcr:primaryType="bootstrap3nt:navBarItemSimpleSearchForm"
                                     position="left"
                                     result="/modules/store-template/search-results"/>
                                    <storefilter jcr:primaryType="jnt:storeFilter" position="right"/>
                                </search-bar>
                                <container fluid="false"
                                j:id="content"
                                j:skin="skins.custom"
                                jcr:mixinTypes="jmix:customSkin jmix:skinnable"
                                jcr:primaryType="bootstrap3nt:container"/>
                                <store-admin fluid="false" jcr:primaryType="bootstrap3nt:container">
                                    <store-admin jcr:primaryType="jnt:contentList">
                                        <store-administration aClass="btn btn-primary"
                                                 j:invertCondition="false"
                                                 j:perUser="true"
                                                 j:requireLoggedUser="false"
                                                 j:requirePrivilegedUser="false"
                                                 j:requiredPermissionNames="jcr:write_live"
                                                 jcr:mixinTypes="jmix:cache jmix:requiredPermissions"
                                                 jcr:primaryType="jnt:siteLink"
                                                 targetTemplate="store-admin">
                                            <j:translation_en jcr:language="en"
                                                jcr:mixinTypes="mix:title"
                                                jcr:primaryType="jnt:translation"
                                                jcr:title="Private App Store Administration"/>
                                        </store-administration>
                                        <store-url j:view="v2"
                                      jcr:mixinTypes="jmix:renderable"
                                      jcr:primaryType="jnt:forgeUrl"/>
                                        <facets-list j:type="jnt:forgeModule"
                                        j:view="forge"
                                        jcr:mixinTypes="jmix:accessControlled jmix:renderable"
                                        jcr:primaryType="jnt:facets">
                                            <j:acl j:inherit="true" jcr:primaryType="jnt:acl"/>
                                            <field-facet facet="j:defaultCategory"
                                           field="jmix:categorized;j:defaultCategory"
                                           jcr:mixinTypes="jmix:accessControlled"
                                           jcr:primaryType="jnt:fieldFacet"
                                           limit="100"
                                           mincount="1"
                                           missing="false"
                                           offset="0">
                                                <j:acl j:inherit="true" jcr:primaryType="jnt:acl"/>
                                                <j:translation_en jcr:language="en"
                                                   jcr:primaryType="jnt:translation"
                                                   label="Category"/>
                                            </field-facet>
                                            <field-facet-1 facet="tagList"
                                             field="jmix:tagged;j:tagList"
                                             jcr:mixinTypes="jmix:accessControlled"
                                             jcr:primaryType="jnt:fieldFacet"
                                             limit="100"
                                             mincount="1"
                                             missing="false"
                                             offset="0">
                                                <j:acl j:inherit="true" jcr:primaryType="jnt:acl"/>
                                                <j:translation_en jcr:language="en" jcr:primaryType="jnt:translation" label="Tags"/>
                                            </field-facet-1>
                                        </facets-list>
                                        <content-list j:invertCondition="false"
                                         j:requireLoggedUser="false"
                                         j:requirePrivilegedUser="false"
                                         j:requiredPermissionNames="jahiaForgeUploadModule"
                                         j:skin="skins.bootstrap-rounded-title"
                                         j:style="grey"
                                         jcr:mixinTypes="jmix:accessControlled jmix:requiredPermissions jmix:skinnable jmix:style"
                                         jcr:primaryType="jnt:contentList">
                                            <store-my-modules-list j:invertCondition="false"
                                                     j:requireLoggedUser="false"
                                                     j:requirePrivilegedUser="false"
                                                     j:requiredPermissionNames="jahiaForgeUploadModule"
                                                     jcr:mixinTypes="jmix:accessControlled jmix:requiredPermissions"
                                                     jcr:primaryType="jnt:forgeMyModulesList">
                                                <j:acl j:inherit="true" jcr:primaryType="jnt:acl"/>
                                                <j:translation_en jcr:language="en"
                                                   jcr:mixinTypes="mix:title"
                                                   jcr:primaryType="jnt:translation"
                                                   jcr:title="My Modules"/>
                                            </store-my-modules-list>
                                            <file-upload-form j:id="myModulesUploadForm"
                                                j:skin="skins.custom"
                                                j:view="jar"
                                                jcr:mixinTypes="jmix:customSkin jmix:renderable jmix:skinnable"
                                                jcr:primaryType="jnt:fileUpload"/>
                                            <j:translation_en jcr:language="en"
                                                jcr:mixinTypes="mix:title"
                                                jcr:primaryType="jnt:translation"
                                                jcr:title="My Modules"/>
                                            <j:acl j:inherit="true" jcr:primaryType="jnt:acl"/>
                                        </content-list>
                                    </store-admin>
                                </store-admin>
                            </pageContent>
                            <store-search-results j:hiddenTemplate="false" jcr:primaryType="jnt:pageTemplate">
                                <j:translation_fr jcr:language="fr"
                                       jcr:mixinTypes="mix:title"
                                       jcr:primaryType="jnt:translation"
                                       jcr:title="Store search result"/>
                                <container jcr:primaryType="jnt:contentList">
                                    <results autoSuggest="true"
                                 autoSuggestHitCount="2"
                                 autoSuggestMaxTermCount="1"
                                 autoSuggestMinimumHitCount="2"
                                 j:view="store"
                                 jcr:mixinTypes="jmix:renderable"
                                 jcr:primaryType="jnt:searchResults">
                                        <j:translation_fr jcr:language="fr"
                                             jcr:mixinTypes="mix:title"
                                             jcr:primaryType="jnt:translation"
                                             jcr:title="Results"/>
                                        <j:translation_de jcr:language="de"
                                             jcr:mixinTypes="mix:title"
                                             jcr:primaryType="jnt:translation"
                                             jcr:title="Results"/>
                                        <j:translation_pt jcr:language="pt"
                                             jcr:mixinTypes="mix:title"
                                             jcr:primaryType="jnt:translation"
                                             jcr:title="Results"/>
                                        <j:translation_en jcr:language="en"
                                             jcr:mixinTypes="mix:title"
                                             jcr:primaryType="jnt:translation"
                                             jcr:title="Results"/>
                                        <j:translation_it jcr:language="it"
                                             jcr:mixinTypes="mix:title"
                                             jcr:primaryType="jnt:translation"
                                             jcr:title="Results"/>
                                        <j:translation_es jcr:language="es"
                                             jcr:mixinTypes="mix:title"
                                             jcr:primaryType="jnt:translation"
                                             jcr:title="Results"/>
                                    </results>
                                </container>
                            </store-search-results>
                            <v2-home j:hiddenTemplate="false" jcr:primaryType="jnt:pageTemplate">
                                <j:translation_fr jcr:language="fr"
                                       jcr:mixinTypes="mix:title"
                                       jcr:primaryType="jnt:translation"
                                       jcr:title="Home"/>
                                <container jcr:primaryType="jnt:contentList">
                                    <forgeModulesList columnsNumber="3"
                                          j:view="storev2"
                                          jcr:mixinTypes="jmix:renderable"
                                          jcr:primaryType="jnt:forgeModulesList"
                                          nbOfModulePerPage="20"/>
                                </container>
                            </v2-home>
                        </home-base>
                    </base>
                    <store-module-v2 j:applyOn="jnt:forgeModule jnt:forgePackage"
                             j:defaultTemplate="false"
                             j:hiddenTemplate="false"
                             jcr:mixinTypes="jmix:accessControlled"
                             jcr:primaryType="jnt:contentTemplate">
                        <j:acl j:inherit="true" jcr:primaryType="jnt:acl"/>
                        <j:translation_en jcr:language="en"
                                 jcr:mixinTypes="mix:title"
                                 jcr:primaryType="jnt:translation"
                                 jcr:title="Private App Store Module v2"/>
                        <pagecontent jcr:primaryType="jnt:contentList">
                            <moduleHeader jcr:primaryType="jnt:area">
                                <moduleHeader j:view="header"
                                   jcr:mixinTypes="jmix:renderable"
                                   jcr:primaryType="jnt:contentList">
                                    <header-menu fluid="false"
                                     inverse="false"
                                     j:classname="header clearfix"
                                     j:skin="skins.custom"
                                     j:view="store"
                                     jcr:mixinTypes="jmix:customSkin jmix:renderable jmix:skinnable"
                                     jcr:primaryType="bootstrap3nt:enhancedNavBar">
                                        <j:translation_fr jcr:language="fr"
                                             jcr:mixinTypes="mix:title"
                                             jcr:primaryType="jnt:translation"
                                             jcr:title="header-menu"/>
                                        <login j:view="store_detail"
                                  jcr:mixinTypes="jmix:renderable"
                                  jcr:primaryType="bootstrap3nt:navBarItemLoginForm"
                                  position="right"
                                  view="menu"/>
                                    </header-menu>
                                </moduleHeader>
                            </moduleHeader>
                            <main-resource-display j:mainResourceView="detailv2"
                                         jcr:mixinTypes="jmix:accessControlled"
                                         jcr:primaryType="jnt:mainResourceDisplay">
                                <j:acl j:inherit="true" jcr:primaryType="jnt:acl"/>
                            </main-resource-display>
                        </pagecontent>
                        <j:translation_fr jcr:language="fr"
                                 jcr:mixinTypes="mix:title"
                                 jcr:primaryType="jnt:translation"
                                 jcr:title="Private App Store V2"/>
                    </store-module-v2>
                    <siteSettingsBase j:hiddenTemplate="false" jcr:primaryType="jnt:template">
                        <j:translation_en jcr:language="en"
                                 jcr:mixinTypes="mix:title"
                                 jcr:primaryType="jnt:translation"
                                 jcr:title="siteSettingsBase"/>
                        <store-admin j:applyOn="jnt:virtualsite"
                            j:defaultTemplate="false"
                            j:hiddenTemplate="true"
                            j:requiredPermissionNames="jahiaForgeModerateModule"
                            j:titleKey="forgeSettings.label"
                            jcr:mixinTypes="jmix:rbTitle"
                            jcr:primaryType="jnt:contentTemplate">
                            <j:translation_en jcr:language="en"
                                    jcr:mixinTypes="mix:title"
                                    jcr:primaryType="jnt:translation"
                                    jcr:title="Private App Store Administration"/>
                            <pagecontent jcr:primaryType="jnt:contentList">
                                <moduleHeader jcr:primaryType="jnt:area">
                                    <moduleHeader j:view="header"
                                      jcr:mixinTypes="jmix:renderable"
                                      jcr:primaryType="jnt:contentList">
                                        <header-menu fluid="false"
                                        inverse="false"
                                        j:classname="header clearfix"
                                        j:skin="skins.custom"
                                        j:view="store"
                                        jcr:mixinTypes="jmix:customSkin jmix:renderable jmix:skinnable"
                                        jcr:primaryType="bootstrap3nt:enhancedNavBar">
                                            <j:translation_fr jcr:language="fr"
                                                jcr:mixinTypes="mix:title"
                                                jcr:primaryType="jnt:translation"
                                                jcr:title="header-menu"/>
                                            <login j:view="store_detail"
                                     jcr:mixinTypes="jmix:renderable"
                                     jcr:primaryType="bootstrap3nt:navBarItemLoginForm"
                                     position="right"
                                     view="menu"/>
                                        </header-menu>
                                    </moduleHeader>
                                </moduleHeader>
                                <bootstrap-container fluid="true" jcr:primaryType="jnt:bootstrapContainer">
                                    <bootstrap-container jcr:primaryType="jnt:contentList">
                                        <workspace-default jcr:primaryType="jnt:workspaceSwitch" workspace="default">
                                            <j:translation_en jcr:language="en"
                                                jcr:mixinTypes="mix:title"
                                                jcr:primaryType="jnt:translation"
                                                jcr:title="www"/>
                                            <bootstrap-tabular-list fadeIn="true"
                                                      jcr:primaryType="jnt:bootstrapTabularList"
                                                      tabsPosition="top">
                                                <store-settings jcr:primaryType="jnt:contentList">
                                                    <j:translation_en jcr:language="en"
                                                      jcr:mixinTypes="mix:title"
                                                      jcr:primaryType="jnt:translation"
                                                      jcr:title="Private App Store Settings"/>
                                                    <forgesettings jcr:primaryType="jnt:forgeSettings"/>
                                                </store-settings>
                                                <store-roles jcr:primaryType="jnt:contentList">
                                                    <j:translation_en jcr:language="en"
                                                      jcr:mixinTypes="mix:title"
                                                      jcr:primaryType="jnt:translation"
                                                      jcr:title="Private App Store roles"/>
                                                    <manage-roles jcr:primaryType="jnt:manageRoles"
                                                  roles="reader store-administrator store-developer">
                                                        <j:translation_en jcr:language="en"
                                                         jcr:mixinTypes="mix:title"
                                                         jcr:primaryType="jnt:translation"
                                                         jcr:title="Private App Store roles"/>
                                                    </manage-roles>
                                                </store-roles>
                                                <categories jcr:primaryType="jnt:contentList">
                                                    <j:translation_en jcr:language="en"
                                                      jcr:mixinTypes="mix:title"
                                                      jcr:primaryType="jnt:translation"
                                                      jcr:title="Categories"/>
                                                    <categorysettings jcr:primaryType="jnt:categorySettings"/>
                                                </categories>
                                            </bootstrap-tabular-list>
                                        </workspace-default>
                                    </bootstrap-container>
                                </bootstrap-container>
                            </pagecontent>
                        </store-admin>
                    </siteSettingsBase>
                    <redirect j:hiddenTemplate="false"
                      j:view="bootstrap"
                      jcr:primaryType="jnt:template">
                        <j:translation_en jcr:language="en"
                                 jcr:mixinTypes="mix:title"
                                 jcr:primaryType="jnt:translation"
                                 jcr:title="redirect"/>
                        <redirect-content j:applyOn="jnt:content"
                                 j:defaultTemplate="false"
                                 j:hiddenTemplate="false"
                                 jcr:primaryType="jnt:contentTemplate">
                            <j:translation_en jcr:language="en"
                                    jcr:mixinTypes="mix:title"
                                    jcr:primaryType="jnt:translation"
                                    jcr:title="Redirect content"/>
                        </redirect-content>
                        <redirect-page j:hiddenTemplate="true" jcr:primaryType="jnt:pageTemplate">
                            <j:translation_en jcr:language="en"
                                    jcr:mixinTypes="mix:title"
                                    jcr:primaryType="jnt:translation"
                                    jcr:title="Redirect page"/>
                        </redirect-page>
                    </redirect>
                    <screenshots j:applyOn="jnt:forgeModule jnt:forgePackage"
                         j:defaultTemplate="false"
                         j:hiddenTemplate="false"
                         jcr:primaryType="jnt:contentTemplate">
                        <j:translation_fr jcr:language="fr"
                                 jcr:mixinTypes="mix:title"
                                 jcr:primaryType="jnt:translation"
                                 jcr:title="Screenshots"/>
                        <j:translation_de jcr:language="de"
                                 jcr:mixinTypes="mix:title"
                                 jcr:primaryType="jnt:translation"
                                 jcr:title="Screenshots"/>
                        <j:translation_pt jcr:language="pt"
                                 jcr:mixinTypes="mix:title"
                                 jcr:primaryType="jnt:translation"
                                 jcr:title="Screenshots"/>
                        <j:translation_en jcr:language="en"
                                 jcr:mixinTypes="mix:title"
                                 jcr:primaryType="jnt:translation"
                                 jcr:title="Screenshots"/>
                        <j:translation_it jcr:language="it"
                                 jcr:mixinTypes="mix:title"
                                 jcr:primaryType="jnt:translation"
                                 jcr:title="Screenshots"/>
                        <j:translation_es jcr:language="es"
                                 jcr:mixinTypes="mix:title"
                                 jcr:primaryType="jnt:translation"
                                 jcr:title="Screenshots"/>
                        <pagecontent jcr:primaryType="jnt:contentList">
                            <main-resource-display j:mainResourceView="screenshotsV2"
                                         jcr:primaryType="jnt:mainResourceDisplay"/>
                            <file-upload-form j:bindedComponent="/modules/store-template/templates/screenshots/pagecontent/main-resource-display"
                                    j:view="screenshot"
                                    jcr:mixinTypes="jmix:renderable"
                                    jcr:primaryType="jnt:fileUpload"/>
                        </pagecontent>
                    </screenshots>
                    <changelog j:applyOn="jnt:forgeModule jnt:forgePackage"
                       j:defaultTemplate="false"
                       j:hiddenTemplate="false"
                       jcr:primaryType="jnt:contentTemplate">
                        <j:translation_fr jcr:language="fr"
                                 jcr:mixinTypes="mix:title"
                                 jcr:primaryType="jnt:translation"
                                 jcr:title="changelog"/>
                        <j:translation_de jcr:language="de"
                                 jcr:mixinTypes="mix:title"
                                 jcr:primaryType="jnt:translation"
                                 jcr:title="changelog"/>
                        <j:translation_pt jcr:language="pt"
                                 jcr:mixinTypes="mix:title"
                                 jcr:primaryType="jnt:translation"
                                 jcr:title="changelog"/>
                        <j:translation_en jcr:language="en"
                                 jcr:mixinTypes="mix:title"
                                 jcr:primaryType="jnt:translation"
                                 jcr:title="changelog"/>
                        <j:translation_it jcr:language="it"
                                 jcr:mixinTypes="mix:title"
                                 jcr:primaryType="jnt:translation"
                                 jcr:title="changelog"/>
                        <j:translation_es jcr:language="es"
                                 jcr:mixinTypes="mix:title"
                                 jcr:primaryType="jnt:translation"
                                 jcr:title="changelog"/>
                        <pagecontent jcr:primaryType="jnt:contentList">
                            <main-resource-display j:mainResourceView="changeLogV2"
                                         jcr:primaryType="jnt:mainResourceDisplay"/>
                            <file-upload-form j:bindedComponent="/modules/store-template/templates/changelog/pagecontent/main-resource-display"
                                    j:view="jar"
                                    jcr:mixinTypes="jmix:renderable"
                                    jcr:primaryType="jnt:fileUpload"/>
                        </pagecontent>
                    </changelog>
                </templates>
                
                <home j:isHomePage="true"
               j:templateName="v2-home"
               jcr:primaryType="jnt:page">
                    <j:translation_en jcr:language="en"
                              jcr:mixinTypes="mix:title"
                              jcr:primaryType="jnt:translation"
                              jcr:title="Home"/>
                    <j:translation_fr jcr:language="fr"
                              jcr:mixinTypes="mix:title"
                              jcr:primaryType="jnt:translation"
                              jcr:title="Home"/>
                    <bootstrap-column jcr:primaryType="jnt:contentList"/>
                </home>
                <search-results j:templateName="store-search-results" jcr:primaryType="jnt:page">
                    <j:translation_en jcr:language="fr"
                              jcr:mixinTypes="mix:title"
                              jcr:primaryType="jnt:translation"
                              jcr:title="Search results"/>
                </search-results>
            </store-template>
    </modules>
</content>